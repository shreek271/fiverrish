<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
          <%= @service.title %>
        </h3>
      </div>
      <div class="panel-body">
        <%= image_tag(@service.image.url, :class => 'img-responsive') %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render 'orders/form' %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>About This Gig</h3>
      </div>
      <div class="panel-body">
        <p><%= @service.description %></p>
      </div>
    </div>
  </div>
</div>
